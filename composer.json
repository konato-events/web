{
    "name": "konato/web",
    "description": "Event discovery platform",
    "keywords": [ "event", "talk", "workshop", "congress", "conference", "events", "talks", "workshops", "congresses", "conferences", "search", "platform" ],
    "license": "GPL-2.0",
    "type": "project",
    "authors": [
        {
            "name": "Igor Santos",
            "email": "igorsantos07+konato@gmail.com",
            "homepage": "http://igorsantos.com.br",
            "role": "Founder"
        }
    ],
    "support": {
        "email": "igorsantos07+konato@gmail.com",
        "issues": "https://bitbucket.org/konato/web/issues",
        "source": "https://bitbucket.org/konato/web"
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/igorsantos07/oauth1-client"
        }
    ],

    "require": {
        "php": "~7.0@beta",
        "ext-gettext": "*",
        "ext-mcrypt": "*",

        "laravel/framework": "5.1.*",
        "laravelcollective/html": "5.1.*",
        "laravel-ardent/laravalid": "2.*",
        "laravelbook/ardent": "^3.3",

        "barryvdh/laravel-ide-helper": "^2.1",
        "laravel/socialite": "^2.0",
        "league/oauth1-client": "dev-master",
        "predis/predis": "^1.0",
        "doctrine/dbal": "^2.5",
        "barryvdh/laravel-debugbar": "^2.0",
        "league/flysystem-aws-s3-v3": "~1.0",
        "socialiteproviders/microsoft-live": "^2.0"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "*",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "raveren/kint": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Resources\\": "resources/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "./artisan clear-compiled",
            "./artisan ide-helper:generate",
            "./artisan optimize",
            "./deploy"
        ],
        "pre-update-cmd": [
            "./artisan clear-compiled"
        ],
        "post-update-cmd": [
            "./artisan ide-helper:generate",
            "./artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "./artisan key:generate"
        ],
        "set-cache": [
            "./artisan config:cache",
            "./artisan route:cache"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
